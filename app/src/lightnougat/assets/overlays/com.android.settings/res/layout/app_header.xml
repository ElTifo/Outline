<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="?android:attr/actionBarSize"
android:gravity="center_vertical"
android:theme="@*com.android.settings:style/ThemeOverlay.SwitchBar.Settings" >

<ImageView android:id="@*com.android.settings:id/app_icon"
    android:layout_width="@*com.android.settings:dimen/switchbar_subsettings_margin_start"
    android:layout_height="40dp"
    android:gravity="end"
    android:layout_centerVertical="true" />

<TextView
    android:id="@*com.android.settings:id/app_name"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_toStartOf="@*com.android.settings:id/app_settings"
    android:layout_marginStart="@*com.android.settings:dimen/switchbar_subsettings_margin_start"
    android:layout_alignWithParentIfMissing="true"
    android:layout_centerVertical="true"
    android:textAppearance="@*com.android.settings:style/TextAppearance.Switch"
    android:textColor="#de000000"
    android:textAlignment="viewStart"
/>

<ImageView
    android:id="@*com.android.settings:id/app_settings"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="@*com.android.settings:dimen/switchbar_subsettings_margin_end"
    android:layout_centerVertical="true"
    android:minHeight="0dp"
    android:minWidth="0dp"
    android:contentDescription="@*com.android.settings:string/notification_app_settings_button"
    android:scaleType="center"
    android:src="@*com.android.settings:drawable/ic_settings_24dp"
    android:visibility="gone"
/>

</RelativeLayout>
