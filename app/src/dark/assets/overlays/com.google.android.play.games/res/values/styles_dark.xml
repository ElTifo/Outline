<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Invert Theme -->
    <style name="Games.MvpActivityTheme.Light" parent="@*com.google.android.play.games:style/Games.MvpActivityTheme.Dark" >
        <item name="android:navigationBarColor">?android:colorAccent</item>
        <item name="android:statusBarColor">?android:colorAccent</item>

        <item name="*com.google.android.play.games:games__progressBarBackgroundColor">#1a000000</item>
    </style>

    <!-- Fix Tabs -->
    <style name="Widget.GoogleMaterial.TabLayout" parent="@*com.google.android.play.games:style/Widget.MaterialComponents.TabLayout">
        <item name="android:background">?android:colorBackground</item>
        <item name="*com.google.android.play.games:tabIndicatorColor">?android:colorAccent</item>
        <item name="*com.google.android.play.games:tabIndicator">@*com.google.android.play.games:drawable/google_tabs_rounded_line_indicator</item>
        <item name="*com.google.android.play.games:tabIndicatorFullWidth">false</item>
        <item name="*com.google.android.play.games:tabTextAppearance">@*com.google.android.play.games:style/TextAppearance.GoogleMaterial.Tab</item>
        <item name="*com.google.android.play.games:tabTextColor">@*com.google.android.play.games:color/google_tabs_icon_color_selector</item>
        <item name="*com.google.android.play.games:tabIconTint">@*com.google.android.play.games:color/google_tabs_icon_color_selector</item>
        <item name="*com.google.android.play.games:tabRippleColor">@*com.google.android.play.games:color/google_tabs_ripple_color_selector</item>
        <item name="*com.google.android.play.games:enforceMaterialTheme">false</item>
        <item name="*com.google.android.play.games:enforceTextAppearance">false</item>
    </style>
</resources>