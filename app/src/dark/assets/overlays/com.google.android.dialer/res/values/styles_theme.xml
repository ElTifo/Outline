<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Settings - Dialog -->
    <style name="AlertDialogTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:colorBackground">@*android:color/background_material_dark</item>
    </style>

    <!-- Call Log -->
    <style name="Dialer.ThemeBase.ActionBar" parent="@*com.google.android.dialer:style/Dialer.Dark.ThemeBase">
        <item name="*com.google.android.dialer:actionBarStyle">@*com.google.android.dialer:style/DialerActionBarBaseStyle</item>
        <item name="*com.google.android.dialer:actionBarTheme">@*com.google.android.dialer:style/DialerActionBarBaseTheme</item>
    </style>
    <!-- Settings -->
    <style name="SettingsStyle" parent="@*com.google.android.dialer:style/Dialer.Dark.ThemeBase">
        <item name="*com.google.android.dialer:actionBarStyle">@*com.google.android.dialer:style/DialerActionBarBaseStyle</item>
    </style>
    <!-- Call Details -->
    <style name="Dialer.ThemeBase.NoActionBar" parent="@*com.google.android.dialer:style/Dialer.Dark.ThemeBase">
        <item name="*com.google.android.dialer:windowActionBar">false</item>
        <item name="*com.google.android.dialer:windowNoTitle">true</item>
    </style>
    <!-- Incall -->
    <style name="Theme.InCallScreen" parent="@*com.google.android.dialer:style/Dialer.ThemeBase.NoActionBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/holo_blue_light</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="*com.google.android.dialer:dialpad_style">@*com.google.android.dialer:style/InCallDialpad</item>
        <item name="*com.google.android.dialer:dialpad_key_button_touch_tint">?android:colorPrimary</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>