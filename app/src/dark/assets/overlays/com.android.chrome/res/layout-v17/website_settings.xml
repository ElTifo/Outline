<?xml version="1.0" encoding="utf-8"?>

<!-- WEBSITE INFO OVERLAY -->

<LinearLayout
    android:orientation="vertical" 
    android:background="@*android:color/background_material_dark"
    android:paddingBottom="8.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:chrome="http://schemas.android.com/apk/com.android.chrome">
    <LinearLayout 
        android:orientation="vertical" 
        android:paddingBottom="12.0dip" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:paddingStart="@*com.android.chrome:dimen/website_settings_popup_padding_sides"
        android:paddingEnd="@*com.android.chrome:dimen/website_settings_popup_padding_sides">
        <view 
            android:textSize="16.0sp" 
            android:textColor="@*com.android.chrome:color/url_emphasis_default_text" 
            android:ellipsize="end"
            android:id="@*com.android.chrome:id/website_settings_url" 
            android:paddingTop="16.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:lineSpacingExtra="6.0dip" 
            android:textAlignment="viewStart" 
            class="org.chromium.chrome.browser.pageinfo.WebsiteSettingsPopup$ElidedUrlTextView" />
        <TextView 
            android:textSize="16.0sp"
            android:textColor="@*com.android.chrome:color/website_settings_popup_text"
            android:id="@*com.android.chrome:id/website_settings_connection_summary"
            android:paddingTop="16.0dip" 
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:lineSpacingExtra="3.0dip" />
        <TextView 
            android:textSize="14.0sp" 
            android:textColor="@*com.android.chrome:color/website_settings_popup_text"
            android:id="@*com.android.chrome:id/website_settings_connection_message"
            android:paddingTop="8.0dip"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:lineSpacingExtra="3.0dip" />
    </LinearLayout>
    <org.chromium.ui.widget.ButtonCompat 
        android:textSize="14.0sp" 
        android:textColor="@android:color/white"
        android:layout_gravity="start"
        android:id="@*com.android.chrome:id/website_settings_instant_app_button"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="12.0dip" 
        android:layout_marginBottom="4.0dip" 
        android:text="@*com.android.chrome:string/page_info_instant_app_button" 
        android:paddingStart="@*com.android.chrome:dimen/website_settings_popup_button_padding_sides"
        android:paddingEnd="@*com.android.chrome:dimen/website_settings_popup_button_padding_sides"
        android:layout_marginStart="@*com.android.chrome:dimen/website_settings_popup_padding_sides" 
        android:layout_marginEnd="@*com.android.chrome:dimen/website_settings_popup_padding_sides" 
        chrome:buttonColor="@*com.android.chrome:color/app_banner_install_button_bg" 
        chrome:buttonRaised="false" />
    <LinearLayout 
        android:orientation="vertical" 
        android:id="@*com.android.chrome:id/website_settings_permissions_list" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:paddingStart="@*com.android.chrome:dimen/website_settings_popup_padding_sides" 
        android:paddingEnd="@*com.android.chrome:dimen/website_settings_popup_padding_sides" />
    <Button 
        android:textColor="@*com.android.chrome:color/light_active_color" 
        android:layout_gravity="end"
        android:id="@*com.android.chrome:id/website_settings_site_settings_button" 
        android:layout_width="wrap_content" 
        android:layout_height="@*com.android.chrome:dimen/website_settings_popup_button_height" 
        android:layout_marginTop="8.0dip"
        android:text="@*com.android.chrome:string/page_info_site_settings_button" 
        android:paddingStart="@*com.android.chrome:dimen/website_settings_popup_button_padding_sides"
        android:paddingEnd="@*com.android.chrome:dimen/website_settings_popup_button_padding_sides"
        android:layout_marginStart="@*com.android.chrome:dimen/website_settings_popup_padding_sides" 
        android:layout_marginEnd="@*com.android.chrome:dimen/website_settings_popup_padding_sides" 
        style="@*com.android.chrome:style/ButtonCompatBorderless" />
    <Button android:textColor="@*com.android.chrome:color/light_active_color" 
        android:layout_gravity="end" 
        android:id="@*com.android.chrome:id/website_settings_open_online_button"
        android:layout_width="wrap_content"
        android:layout_height="@*com.android.chrome:dimen/website_settings_popup_button_height"
        android:layout_marginTop="8.0dip"
        android:text="@*com.android.chrome:string/page_info_open_online_button" 
        android:paddingStart="@*com.android.chrome:dimen/website_settings_popup_button_padding_sides" 
        android:paddingEnd="@*com.android.chrome:dimen/website_settings_popup_button_padding_sides" 
        android:layout_marginStart="@*com.android.chrome:dimen/website_settings_popup_padding_sides"
        android:layout_marginEnd="@*com.android.chrome:dimen/website_settings_popup_padding_sides"
        style="@*com.android.chrome:style/ButtonCompatBorderless" />
</LinearLayout>