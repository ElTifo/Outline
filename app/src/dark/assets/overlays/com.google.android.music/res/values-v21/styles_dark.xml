<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material" />
    <style name="PlayDrawerProfileNameText" parent="@*com.google.android.music:style/PlayMediumPlainText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Thriller.RecentsButton" parent="@*com.google.android.music:style/Thriller">
        <item name="android:textSize">@*com.google.android.music:dimen/thriller_home_button_text_size</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="BaseMusicActivityTheme" parent="@*com.google.android.music:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@*com.google.android.music:color/app_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:gridViewStyle">@*com.google.android.music:style/MusicGridView</item>
        <item name="android:listViewStyle">@*com.google.android.music:style/MusicListView</item>
        <item name="android:colorPrimary">@*com.google.android.music:color/app_taskswitcher_color</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="*com.google.android.music:drawerArrowStyle">@*com.google.android.music:style/MusicDrawerArrowStyle</item>
        <item name="*com.google.android.music:windowActionBarOverlay">true</item>
        <item name="*com.google.android.music:actionBarPopupTheme">@*com.google.android.music:style/ThemeOverlay.AppCompat.Light</item>
        <item name="*com.google.android.music:actionBarDivider">@null</item>
        <item name="*com.google.android.music:dialogTheme">@*com.google.android.music:style/MusicDialogTheme</item>
        <item name="*com.google.android.music:selectableItemBackground">@*com.google.android.music:drawable/white_highlight</item>
        <item name="*com.google.android.music:colorPrimary">@*com.google.android.music:color/app_color_primary</item>
        <item name="*com.google.android.music:colorPrimaryDark">@*com.google.android.music:color/app_color_secondary</item>
        <item name="*com.google.android.music:colorAccent">@*com.google.android.music:color/app_color_accented</item>
        <item name="*com.google.android.music:alertDialogTheme">@*com.google.android.music:style/MusicDialogTheme</item>
    </style>

    <style name="MusicSettingsActivityTheme" parent="@*com.google.android.music:style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@*com.google.android.music:color/settings_summary_color</item>
        <item name="android:windowBackground">@*com.google.android.music:color/app_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:gridViewStyle">@*com.google.android.music:style/MusicGridView</item>
        <item name="android:listViewStyle">@*com.google.android.music:style/MusicListView</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="*com.google.android.music:actionBarStyle">@*com.google.android.music:style/MusicSettingsActionBar</item>
        <item name="*com.google.android.music:actionBarDivider">@null</item>
        <item name="*com.google.android.music:selectableItemBackground">@*com.google.android.music:drawable/white_highlight</item>
        <item name="*com.google.android.music:colorPrimary">@*com.google.android.music:color/app_color_primary</item>
        <item name="*com.google.android.music:colorPrimaryDark">@*com.google.android.music:color/app_color_secondary</item>
        <item name="*com.google.android.music:colorAccent">@*com.google.android.music:color/app_color_accented</item>
    </style>
</resources>
