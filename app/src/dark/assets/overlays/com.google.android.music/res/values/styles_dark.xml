    <!-- Chromecast Dialog -->
    <!-- Device  list -->
    <style name="Widget.MediaRouter.ChooserText" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Widget.MediaRouter.ChooserText.Primary" parent="@style/Widget.MediaRouter.ChooserText">
        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="Widget.MediaRouter.ChooserText.Primary.Light" parent="@style/Widget.MediaRouter.ChooserText.Primary">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16.0sp</item>
    </style>
    <!-- Device  connected -->
    <style name="Widget.MediaRouter.ControllerText" parent="@style/Widget.MediaRouter.ChooserText" />
    <style name="Widget.MediaRouter.ControllerText.Title" parent="@style/Widget.MediaRouter.ControllerText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="Widget.MediaRouter.ControllerText.Title.Light" parent="@style/Widget.MediaRouter.ControllerText.Title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20.0sp</item>
    </style>
