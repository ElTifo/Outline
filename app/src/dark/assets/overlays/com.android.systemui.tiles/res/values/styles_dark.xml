<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.NotificationGuts" parent="@*android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:fontFamily">roboto-regular</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Header" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:alpha">1.0</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Secondary" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Primary" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:textSize">16.0sp</item>
        <item name="android:alpha">1.0</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Radio" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:alpha">1.0</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.NotificationGuts.Button" parent="@style/TextAppearance.NotificationGuts">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@*android:color/accent_material_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SwitchBar" parent="@android:style/TextAppearance.Material.Title">   <!-- Switch bar text appearance -->
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="systemui_theme_remote_input" parent="@*android:style/Theme.Material">              <!-- Quick Reply Background -->
        <item name="android:background">@*android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/background_dark</item>
        <item name="android:colorControlActivated">@*android:color/accent_material_dark</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
    </style>
</resources>
