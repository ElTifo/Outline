<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center|left"
        android:orientation="vertical"
        android:id="@*com.whatsapp:id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40.0dip"
        android:minHeight="42.0dip">

        <LinearLayout
            android:id="@*com.whatsapp:id/name_in_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@*com.whatsapp:style/ConversationRowGroupNameContainer">

            <com.whatsapp.TextEmojiLabel
                android:id="@*com.whatsapp:id/name_in_group_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationRowParticipantName.TextRow" />

            <com.whatsapp.TextEmojiLabel
                android:id="@*com.whatsapp:id/pushname_in_group_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@*com.whatsapp:style/ConversationRowPushName.TextRow" />
        </LinearLayout>

        <include layout="@*com.whatsapp:layout/conversation_row_quoted_frame" />

        <FrameLayout
            android:id="@*com.whatsapp:id/suspicious_link_indicator_holder"
            android:paddingLeft="4.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="4.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@*com.whatsapp:id/web_page_preview_holder"
            android:paddingLeft="4.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="4.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <view
            android:layout_gravity="left"
            android:paddingBottom="2.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.whatsapp.TextAndDateLayout">

            <com.whatsapp.TextEmojiLabel
                android:textSize="16.0sp"
                android:textColor="#ffffff"
                android:layout_gravity="left"
                android:id="@*com.whatsapp:id/message_text"
                android:paddingLeft="12.0dip"
                android:paddingTop="2.0dip"
                android:paddingRight="8.0dip"
                android:paddingBottom="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="bottom|center|right"
                android:orientation="horizontal"
                android:id="@*com.whatsapp:id/date_wrapper"
                android:paddingLeft="0.0dip"
                android:paddingRight="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.whatsapp.WaTextView
                    android:id="@*com.whatsapp:id/date"
                    android:paddingBottom="4.0dip"
                    android:textColor="#ccffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@*com.whatsapp:style/ConversationDate" />
            </LinearLayout>
        </view>
    </LinearLayout>

    <com.whatsapp.WaImageView
        android:id="@*com.whatsapp:id/forward"
        style="@*com.whatsapp:style/ForwardButton" />
</merge>