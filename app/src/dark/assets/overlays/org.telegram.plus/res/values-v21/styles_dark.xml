<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TMessages.Start" parent="@android:style/Theme.Material">
        <item name="android:actionBarStyle">@*org.telegram.plus:style/ActionBar.Transparent.TMessages.Start</item>
        <item name="android:colorBackground">@*android:color/background_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorPrimary">@*org.telegram.plus:color/header</item>
    </style>

    <style name="Theme.TMessages" parent="@android:style/Theme.Material">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@*android:color/background_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
        <item name="android:itemTextAppearance">@*org.telegram.plus:style/ActionBar.Transparent.TMessages.Item</item>
        <item name="android:listViewStyle">@*org.telegram.plus:style/Theme.TMessages.ListView</item>
        <item name="android:actionBarItemBackground">@*org.telegram.plus:drawable/bar_selector_style</item>
        <item name="android:colorPrimaryDark">#00000000</item>
        <item name="android:colorPrimary">@*org.telegram.plus:color/header</item>
        <item name="android:alertDialogTheme">@*org.telegram.plus:style/Theme.TMessages.Dialog.Alert</item>
        <item name="android:colorControlActivated">@*org.telegram.plus:color/primary_light</item>
        <item name="android:alertDialogTheme">@*org.telegram.messenger.beta:style/Theme.TMessages.Dialog.Alert</item>
    </style>

    <style name="ActionBar.Transparent.TMessages.Start" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@*android:color/background_material_dark</item>
        <item name="android:title"></item>
        <item name="android:logo">@*org.telegram.plus:drawable/transparent</item>
    </style>

    <style name="Theme.TMessages.Dialog.Alert" parent="android:style/Theme.Material.Dialog.Alert"><!--
        <item name="android:colorAccent">#4d83b3</item>-->
        <item name="android:colorAccent">@android:color/</item>
    </style>
</resources>
