<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="48dp"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal">
    <com.android.musicfx.seekbar.SeekBar
        android:id="@*com.android.musicfx:id/EQBandSeekBar"
        style="@*com.android.musicfx:style/Widget.Material.SeekBar.Vertical"
        android:layout_marginStart="@*com.android.musicfx:dimen/eq_slider_margin"
        android:layout_marginEnd="@*com.android.musicfx:dimen/eq_slider_margin"
        android:layout_width="48.0dip"
        android:layout_height="fill_parent"
        android:visibility="invisible" />
    <TextView
        android:id="@*com.android.musicfx:id/EQBandTextView"
        android:layout_width="fill_parent"
        android:layout_height="@*com.android.musicfx:dimen/eq_text_height"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:alpha="1"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#ffffffff"
         />
</LinearLayout>