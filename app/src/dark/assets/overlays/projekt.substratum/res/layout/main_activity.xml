<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/projekt.substratum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@*projekt.substratum:id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@*android:drawable/ic_menu_emoticons"
        android:elevation="0dp"
        android:theme="@*projekt.substratum:style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title=""
        app:popupTheme="@*projekt.substratum:style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@*projekt.substratum:id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp"/>

            <TextView
                android:id="@*projekt.substratum:id/theme_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@*projekt.substratum:string/actionbar_theme_count_loading"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@*projekt.substratum:id/drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@*projekt.substratum:id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</LinearLayout>