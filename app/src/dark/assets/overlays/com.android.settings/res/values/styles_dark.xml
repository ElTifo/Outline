<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">          <!-- Toolbar color when opening the app -->
        <item name="android:background">@*android:color/primary_material_light</item>
    </style>

    <style name="Theme.SettingsBase" parent="@android:style/Theme.Material">                        <!-- MAIN theme -->
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>                <!-- Accent Color -->
        <item name="android:statusBarColor">@*android:color/primary_material_dark</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>     <!-- Navbar color -->
        <item name="android:textColorPrimaryInverse">#ffffff</item>                                 <!-- Condition card text -->
        <item name="android:windowBackground">@*android:color/background_material_dark</item>       <!-- Background -->
        <item name="android:colorBackground">@*android:color/background_material_dark</item>         <!-- Background -->
    </style>


    <style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
        <item name="android:colorPrimary">@*android:color/primary_material_light</item>
        <item name="android:colorPrimaryDark">@*android:color/primary_material_light</item>
        <item name="android:colorAccent">@*android:color/accent_material_light</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
    </style>
    <style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert" />

    <style name="PreferenceFragmentListSinglePane" parent="@*android:style/PreferenceFragmentList">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@android:color/background_dark</item>
    </style>
    <style name="SecurityPreferenceButtonContainer" parent="@android:style/Widget.Material.SegmentedButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2.0</item>
        <item name="android:dividerPadding">8.0dip</item>
    </style>
    <style name="SecurityPreferenceButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material">
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
        <item name="android:statusBarColor">@*android:color/background_material_dark</item>
    </style>

    <style name="FallbackHome" parent="@*android:style/Theme.DeviceDefault" />

    <!-- Text Styles -->
    <style name="TextAppearance.CategoryTitle" parent="@android:style/TextAppearance.Material.Small"><!-- Dashboard Category Title Text Style -->
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@*android:color/accent_material_light</item>
    </style>
</resources>