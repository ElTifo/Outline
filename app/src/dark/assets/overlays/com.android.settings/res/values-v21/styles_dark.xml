<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorLink">@*android:color/accent_material_dark</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorLinkInverse">@*android:color/accent_material_dark</item>
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
    </style>

    <style name="Theme.SettingsBase" parent="@android:style/Theme.Material">                        <!-- MAIN theme -->

        <item name="android:colorPrimary">#00FAFAFA</item>
        <item name="android:colorPrimaryDark">@*android:color/background_material_dark</item>
        <item name="android:statusBarColor">@*android:color/background_material_dark</item>
        <item name="android:actionBarStyle">@*com.android.settings:style/Theme.ActionBar</item>

        <item name="android:colorAccent">@*android:color/accent_material_dark</item>                <!-- Accent Color -->
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>     <!-- Navbar color -->
        <item name="android:textColorPrimaryInverse">#ffffff</item>                                 <!-- Condition card text -->
        <item name="android:windowBackground">@*android:color/background_material_dark</item>       <!-- Background -->
        <item name="android:colorBackground">@*android:color/background_material_dark</item>         <!-- Background -->

        <item name="android:colorSecondary">@*android:color/background_material_dark</item>         <!-- Switchbar Background Color -->
    </style>
</resources>