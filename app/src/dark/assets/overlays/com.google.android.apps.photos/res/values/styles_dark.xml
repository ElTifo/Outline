<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Create New ... Circles -->
    <style name="photos_assistant_create_circle_button">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- BottomBar Shadow -->
    <style name="TabBarTopShadow">
        <item name="android:background">@*com.google.android.apps.photos:drawable/photos_theme_fake_shadow_top_edge</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- SplashScreen -->
    <style name="Theme.Photos.Splash" parent="@*com.google.android.apps.photos:style/Theme.Photos.Fullscreen">
        <item name="android:windowBackground">@*com.google.android.apps.photos:drawable/quantum_launchscreen_photos</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- Toast -->
    <style name="PhotosActionableToastBackground">
        <item name="android:background">@*com.google.android.apps.photos:drawable/photos_actionabletoast_background</item>
        <item name="android:paddingTop">@*com.google.android.apps.photos:dimen/bt_toastbar_vertical_padding</item>
        <item name="android:paddingBottom">@*com.google.android.apps.photos:dimen/bt_toastbar_vertical_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="PhotosActionableToastText">
        <item name="android:textAppearance">@*com.google.android.apps.photos:style/TextAppearance.Photos.Body2</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@*com.google.android.apps.photos:dimen/bt_toastbar_horizontal_padding</item>
        <item name="android:paddingRight">@*com.google.android.apps.photos:dimen/bt_toastbar_horizontal_padding</item>
        <item name="android:maxLines">@*com.google.android.apps.photos:integer/photos_actionabletoast_text_max_lines</item>
        <item name="android:lineSpacingMultiplier">@*com.google.android.apps.photos:dimen/bt_toastbar_line_spacing_multiplier</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
    </style>
    <style name="PhotosActionableToastButton" parent="@*com.google.android.apps.photos:style/Widget.Photos.Button.Borderless">
        <item name="android:backgroundTint">@null</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.AppCompat.Button" parent="@*com.google.android.apps.photos:style/Base.Widget.AppCompat.Button">
        <item name="android:backgroundTint">@null</item>
    </style>
</resources>