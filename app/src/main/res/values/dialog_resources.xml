<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Making a dark theme? You know what to do! -->
    <style name="DialogStyle" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorBackground">@color/dialog_background</item>
        <item name="android:colorAccent">@color/icon_accent</item>
    </style>
    <!--
      ~ Custom dialog message on theme launch.
      ~ Add word in launch_dialog_negative to add a cancel button on the dialog
      -->
    <string name="launch_dialog_title">Instructions</string>
    <string name="launch_dialog_content">This Theme supports multiple Android versions and flavors. Make sure to select the correct version for your device at the top of the list.\n\n• AOSP - Stock Android Nougat/Oreo/Pie\n• AOSP Q - Stock Android Q\n• OxygenOS - OxygenOS Oreo/Pie</string>
    <string name="launch_dialog_positive">PlayStore</string>
    <string name="launch_dialog_negative">Ignore</string>
</resources>