<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- QUICKSETTINGS -->
    <style name="systemui_theme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:colorForeground">@*android:color/accent_material_light</item>
        <item name="android:colorForegroundInverse">@*android:color/accent_material_light</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:keySet">8.0dip</item>
        <item name="android:textColorPrimary">@android:color/holo_blue_bright</item>
        <item name="android:colorControlNormal">@android:color/holo_blue_bright</item>
        <item name="android:progressBackgroundTint">@android:color/holo_blue_bright</item>
    </style>
    <style name="TextAppearance" />
    <style name="TextAppearance.QS" parent="@style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/holo_purple</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.QS.DetailHeader" parent="@style/TextAppearance.QS">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

   <!-- <style name="TextAppearance.Volume" parent="@style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:fontFamily">sans-serif</item>
    </style> -->

    <!-- Volume Panel Do not disturb title -->
    <style name="TextAppearance.Volume.ZenSummary" parent="@style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@*android:color/accent_material_light</item>
    </style>

    <!-- Volume Panel Do not disturb description -->
    <style name="TextAppearance.Volume.ZenDetail" parent="@style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/holo_purple</item>
    </style>

    <style name="TextAppearance.QS.TileLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
