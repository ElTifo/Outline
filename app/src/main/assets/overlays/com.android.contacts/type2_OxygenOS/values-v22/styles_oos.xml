<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Theme - Fix Accent -->
    <style name="Oneplus.Contacts.BaseTheme" parent="@*com.android.contacts:style/Oneplus.Theme.DeviceDefault">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:textColorPrimary">@*com.android.contacts:color/oneplus_primary_text_color</item>
        <item name="android:textColorSecondary">@*com.android.contacts:color/oneplus_secondary_text_color</item>
        <item name="android:listViewStyle">@*com.android.contacts:style/ListViewStyle</item>
        <item name="android:actionModeBackground">@*com.android.contacts:color/oneplus_actionmode_background_color</item>
        <item name="android:actionModeCloseDrawable">@*com.android.contacts:drawable/ic_close_lt</item>
        <item name="android:actionBarTabBarStyle">@*com.android.contacts:style/ContactsActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@*com.android.contacts:style/OPContactsActionBarTabTextStyle</item>
        <item name="android:alertDialogTheme">@*com.android.contacts:style/OnePlusContactsAlertDialogTheme</item>
        <item name="android:fastScrollThumbDrawable">@*com.android.contacts:drawable/fastscroll_thumb</item>
        <item name="android:fastScrollPreviewBackgroundLeft">@*com.android.contacts:drawable/oneplus_fastscroll_label_left_contain_blank</item>
        <item name="android:fastScrollPreviewBackgroundRight">@*com.android.contacts:drawable/oneplus_fastscroll_label_right_contain_blank</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="android:actionModeSplitBackground">@*com.android.contacts:color/oneplus_actionmode_background_color</item>
        <item name="android:fastScrollStyle">@*com.android.contacts:style/OneplusFastScrollStyle</item>
        <item name="android:colorControlActivated">@*com.android.contacts:color/oneplus_contacts_control_activated_color</item>
        <item name="android:colorPrimary">@*com.android.contacts:color/oneplus_primary_color</item>
        <item name="android:colorPrimaryDark">@*com.android.contacts:color/oneplus_primary_color_dark</item>
        <item name="android:windowLightStatusBar">@*com.android.contacts:bool/config_window_light_status_Bar</item>
        <item name="*com.android.contacts:op_preferenceFragmentStyle">@*com.android.contacts:style/OneplusContactPreferenceStyle</item>
        <item name="*com.android.contacts:op_preferenceFragmentListStyle">@*com.android.contacts:style/OneplusContactPreferenceStyle</item>
        <item name="*com.android.contacts:onePlusActionbarTitleColor">@*com.android.contacts:color/oneplus_actionbar_text_color</item>
        <item name="*com.android.contacts:onePlusActionbarIconColor">@*com.android.contacts:color/oneplus_actionbar_icon_tint_color</item>
        <item name="*com.android.contacts:onePlusActionbarBackgroundColor">@*com.android.contacts:color/oneplus_actionbar_background_color</item>
        <item name="*com.android.contacts:onePlusActionbarIconAlpha">1.0</item>

        <item name="*com.android.contacts:onePlusPrimaryColor">@android:color/holo_blue_light</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
    </style>

    <!-- Dialog - Fix Accent -->
    <style name="OnePlusContactsAlertDialogTheme" parent="@*com.android.contacts:style/Oneplus.Theme.DeviceDefault.Dialog.Alert">
        <item name="*com.android.contacts:onePlusPrimaryColor">@android:color/holo_blue_light</item>
    </style>

    <style name="OnePlusAppThemeEmergency" parent="@*com.android.contacts:style/Oneplus.Theme.DeviceDefault">
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@*com.android.contacts:style/OnePlusActionBarWithTabStyle</item>
        <item name="android:alertDialogTheme">@*com.android.contacts:style/OnePlusContactsAlertDialogTheme</item>
        <item name="android:colorPrimaryDark">@*com.android.contacts:color/oneplus_primary_color_dark</item>
        <item name="android:windowLightStatusBar">@*com.android.contacts:bool/config_window_light_status_Bar</item>
        <item name="*com.android.contacts:onePlusActionbarBackgroundColor">@*com.android.contacts:color/oneplus_actionbar_background_color</item>
        <item name="*com.android.contacts:onePlusActionbarBackground">@*com.android.contacts:drawable/op_actionbar_background_with_tab</item>
        <item name="*com.android.contacts:onePlusPrimaryColor">@android:color/holo_blue_light</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:statusBarColor">@*android:color/transparent</item>
    </style>
</resources>