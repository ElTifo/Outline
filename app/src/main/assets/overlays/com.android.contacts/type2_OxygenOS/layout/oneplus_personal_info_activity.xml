<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@*com.android.contacts:color/oneplus_contorl_bg_color_default"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.oneplus.lib.widget.actionbar.Toolbar
        android:id="@*com.android.contacts:id/tool_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.oneplus.lib.widget.OPTabLayout
        android:id="@*com.android.contacts:id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@*com.android.contacts:id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>