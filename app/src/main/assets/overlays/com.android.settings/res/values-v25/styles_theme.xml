<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base -->
   <style name="Theme.SettingsBase" parent="@*android:style/Theme.Material.Light.LightStatusBar">
       <item name="android:colorPrimary">#FFF</item>
       <item name="android:colorPrimaryDark">#FFF</item>
       <item name="android:colorControlNormal">@*com.android.settings:color/icon_accent</item>
    </style>

    <!-- SwitchBar Text -->
    <style name="ThemeOverlay.SwitchBar.Settings" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="@*com.android.settings:switchBarMarginStart">@*com.android.settings:dimen/switchbar_subsettings_margin_start</item>
        <item name="@*com.android.settings:switchBarMarginEnd">@*com.android.settings:dimen/switchbar_subsettings_margin_end</item>
        <item name="*com.android.settings:switchBarBackgroundColor">?android:colorSecondary</item>
        <item name="android:textColorPrimary">#de000000</item>
    </style>

    <!-- About Phone -->
    <style name="Theme.DialogWhenLarge" parent="@*com.android.settings:Theme.SettingsBase">
        <item name="android:actionBarStyle">@*com.android.settings:style/Theme.ActionBar</item>
        <item name="android:titleTextColor">#de000000</item>
    </style>
</resources>