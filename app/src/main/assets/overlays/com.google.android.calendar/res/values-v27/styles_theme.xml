        <item name="android:navigationBarDividerColor">#1a000000</item>
    </style>

    <!-- LaunchScreen -->
    <style name="CalendarTheme.AllInOneActivity.LaunchScreen" parent="@*com.google.android.calendar:style/CalendarTheme.NoActionBar">
        <item name="android:windowBackground">@*com.google.android.calendar:drawable/quantum_launchscreen_calendar</item>
        <item name="android:statusBarColor">#FFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">#FFF</item>
        <item name="android:colorBackground">#FFF</item>
    </style>
</resources>